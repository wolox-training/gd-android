<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/vYoutubeVideoContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/viewholder_news_container"
    android:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/vYoutubeVideoImage"
        android:layout_width="@dimen/news_picture_size"
        android:layout_height="@dimen/news_picture_size"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vYoutubeVideoTitle"
        android:layout_width="@dimen/youtube_video_info_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium_extra"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/static_spacing_medium"
        android:layout_toEndOf="@id/vYoutubeVideoImage"
        android:text="@string/youtube_title"
        android:textColor="@color/black"
        android:textSize="@dimen/font_large"
        android:maxLines="@integer/news_body_max_lines"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vYoutubeVideoImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/vYoutubeVideoBody"
        android:layout_width="@dimen/youtube_video_info_size"
        android:layout_height="wrap_content"
        android:layout_below="@id/vYoutubeVideoTitle"
        android:layout_marginStart="@dimen/spacing_medium_extra"
        android:layout_marginTop="@dimen/static_spacing_medium"
        android:layout_marginEnd="@dimen/static_spacing_medium"
        android:text="@string/news_body"
        android:textSize="@dimen/font_large"
        android:maxLines="@integer/news_body_max_lines"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vYoutubeVideoImage"
        app:layout_constraintTop_toBottomOf="@+id/vYoutubeVideoTitle"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tiniest"
        android:layout_alignParentBottom="true"
        android:background="@color/super_light_gray"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>