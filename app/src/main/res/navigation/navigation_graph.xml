<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="ar.com.wolox.android.example.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeActivity"
            app:destination="@id/homeActivity" />
        <action
            android:id="@+id/action_loginFragment_to_registerActivity"
            app:destination="@id/registerActivity" />
    </fragment>

    <activity
        android:id="@+id/homeActivity"
        android:name="ar.com.wolox.android.example.ui.home.HomeActivity"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <activity
        android:id="@+id/registerActivity"
        android:name="ar.com.wolox.android.example.ui.login.RegisterActivity"
        android:label="activity_register"
        tools:layout="@layout/activity_register" />
</navigation>